<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:layout_marginBottom="3dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/relLayout"
                android:layout_width="180dp"
                android:layout_height="175dp"
                android:background="@drawable/round_nostroke">


                <RelativeLayout
                    android:id="@+id/rlmain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/imgBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:scaleType="centerCrop"
                        android:src="@drawable/activity_pic1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/round_bottom"
                        android:gravity="bottom">

                        <RelativeLayout
                            android:id="@+id/heartLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp">

                            <ImageView
                                android:id="@+id/image_heart"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="12dp"
                                android:src="@drawable/ic_feed"
                                android:visibility="visible"
                                app:tint="#DFDFDF" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/heart_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/heartLayout"
                            android:text="411"
                            android:textColor="@color/white"
                            android:textSize="9sp" />

                        <ImageView
                            android:id="@+id/speech_bubble"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/heart_count"
                            android:src="@drawable/ic_comment"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/speech_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/speech_bubble"
                            android:text="411"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_below="@id/cv_inner">

            <TextView
                android:id="@+id/usernmae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="xx_07_hwi"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernmae"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="쿠킹틴즈 최고!!\n2조 친구들이랑 모여서 서브 샌드위치를 먹었다."
                android:textColor="@color/black"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
</layout>